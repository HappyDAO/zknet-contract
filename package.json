{
  "name": "zknet-contract",
  "version": "0.0.1",
  "description": "zknet contract",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HappyDAO/zknet-contract.git"
  },
  "author": "HappyDAO",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/HappyDAO/zknet-contract/issues"
  },
  "homepage": "https://github.com/HappyDAO/zknet-contract#readme",
  "scripts": {
    "compile": "yarn compile:l1 && yarn compile:l2",
    "compile:l1": "COMPILE_TARGET=l1 yarn hardhat compile",
    "compile:l2": "COMPILE_TARGET=l2 yarn hardhat compile",
    "export-abi": "yarn hardhat export-abi --no-compile",
    "export-doc": "yarn hardhat dodoc",
    "lint": "yarn lint:sol && yarn lint:ts && yarn prettier:check",
    "lint:sol": "solhint --config ./.solhint.json \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "prettier": "prettier --config ./.prettierrc.yaml --write \"**/*.{js,json,md,sol,ts,yaml,yml}\"",
    "prettier:check": "prettier --check --config ./.prettierrc.yaml \"**/*.{js,json,md,sol,ts,yaml,yml}\"",
    "clean": "rm -rf cache cache-zk artifacts artifacts-zk typechain*",
    "precommit": "yarn compile && yarn export-abi && yarn export-doc && yarn prettier && yarn lint",
    "test": "yarn hardhat test",
    "deploy:l1": "yarn hardhat run scripts/deploy-governance.ts",
    "deploy:l2": "yarn hardhat run scripts/deploy-perpetual.ts",
    "test-coverage": "yarn hardhat coverage --testfiles test/dev/*.ts"
  },
  "devDependencies": {
    "@matterlabs/hardhat-zksync-deploy": "0.3.5",
    "@matterlabs/hardhat-zksync-solc": "0.3.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0-beta.4",
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-solhint": "^2.0.1",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.6.0",
    "@primitivefi/hardhat-dodoc": "^0.2.3",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@typechain/ethers-v5": "^10.0.0",
    "@typechain/hardhat": "^6.0.0",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "chai": "^4.3.6",
    "dotenv": "^16.0.1",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.7",
    "hardhat": "^2.9.6",
    "hardhat-abi-exporter": "^2.9.0",
    "hardhat-gas-reporter": "^1.0.8",
    "pino": "^7.11.0",
    "pino-caller": "^3.2.0",
    "pino-pretty": "^7.6.1",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.8.0",
    "typechain": "^8.0.0",
    "typescript": "^4.6.4",
    "zksync-web3": "^0.4.0"
  }
}